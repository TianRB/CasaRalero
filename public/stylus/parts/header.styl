.large
	height 80px
header
	width 100%
	box-shadow 0px 10px 16px -9px rgba(176,173,176,1)
	font-size 0
	z-index 1000
	background #fff
	.logo
		width 70%
		height 100%
		display inline-block
		vertical-align top
		figure 
			width 100%
			height 100%
			img 
				width auto 
				height 50px 
				margin-top 15px
				margin-left 20px
	.icono-menu-movil
		width 30%
		height 80px
		position relative
		display inline-block
		vertical-align top
		z-index 2
		.rayita
			width 60px
			height 4px
			background #fff
			position absolute 
			left 50%
			margin-left -30px
		.rayita-uno
			top 26px
			transform rotate(0deg)
			transition all .5s
		.rayita-dos
			top 38px
			opacity 1
			transition all .5s
		.rayita-tres
			top 50px
			transform rotate(0deg)
			transition all .5s
	.icono-menu-movil-activo
		.rayita-uno
			top 36px
			transform rotate(45deg) !important
		.rayita-dos
			opacity 0 !important
		.rayita-tres
			top 37px
			transform rotate(-45deg) !important
	.pleca-azul
		position absolute
		right 0
		top 0
		height 80px
		background azul-ralero
		width 30%
		z-index 1
	.navegacion-principal
		position absolute
		width 100%
		height 100%
		padding 15px 0
		//box-shadow -10px 6px 16px -5px rgba(209,207,209,1)
		border-bottom-left-radius 5px
		transition all .5s
		overflow hidden
		display none
		z-index 100
		.circulo-negro
			width 2000px
			height 2000px
			left 50%
			margin-left -1000px
			border-radius 50%
			top 50%
			margin-top -1000px
			background-color rgba(32, 57, 85, .95)
			position absolute
			z-index 0
			transform scale(0)
			transform-origin 50% 50%
			transition all 1s
		.menu-principal
			text-align center
			width 80%
			margin 0 auto
			position relative 
			z-index 1
			display none
			li 
				height 40px
				line-height 40px
				text-transform uppercase
				list-style none
				font-weight 100
				a 
					color #fff 
					text-decoration none
					font-size 1rem
	.navegacion-principal-activa
		z-index 100
		display block
		.circulo-negro-activo
			transform scale(1)
	.menu-secundario
		position relative 
		z-index 1
		width 80% 
		margin 0 auto 
		margin-top 40px
		padding-top 20px
		border-top 1px solid #fff
		display none
		ul 
			text-align center
			li 
				list-style none 
				display inline-block
				vertical-align top 
				margin 0px
				a
					color #fff 
					font-size 1rem
					text-decoration none
					font-weight 100
					text-transform uppercase
			.ofertas
				padding 5px 15px 
				background red
				margin-top -5px
				margin-left 20px
				border-radius 5px
		.buscador
			border 1px solid #fff
			border-radius 5px
			height 20px
			line-height 20px
			background none
			color #fff
			padding-left 10px
			margin-bottom 30px
		.horario
			width 80%
			margin 0 auto 
			font-size 1rem
			color #fff
			font-weight 100
			text-align center
			margin-top 30px
			line-height 1.5rem
		.btn-call
			width 100px
			height 40px 
			line-height 40px 
			background-color rojo-ralero
			margin 0 auto
			font-size 1rem 
			color #fff
			text-align center
			border-radius 5px
			margin-top 40px
	
		
@media screen and (min-width: 1000px)
	.wrapt
		width 95%
		max-width 1300px
		margin 0 auto
		position relative
	.pleca-header
		height 90px
	.large
		height 90px
		transition all .5s
	.small
		height 50px
		transition all .5s
	header 
		position fixed
		.logo
			width 30%
			figure
				img
					height 60px
					margin-top 15px
					transition all .5s
		.logo-pequeno
			figure 
				img 
					height 40px
					margin-top 5px
		.icono-menu-movil
			display none
		.pleca-azul
			width 70%
			height 90px
		.pleca-azul-pequena
			height 50px
		.navegacion-principal
			width 70%
			right 0
			height 110px 
			top 0px
			padding 5px 0 
			z-index 2
			box-shadow none
			transition all .5s
			display block
			.menu-principal
				width 100%
				display block
				top 50px
				text-align right
				transition all .5s
				li 
					display inline-block
					vertical-align top 
					padding 0px 20px
					height 20px
					line-height 20px
					border-right 1px solid #fff
					&:last-child
						border-right 0px solid transparent
					a 
						font-size .8rem
			.menu-secundario 
				width 100%
				display block
				top 0 
				text-align right
				position absolute
				margin 0 auto 
				margin-top 0px
				padding-top 0px
				border-top 0px solid transparent
				transition all .5s
				.contenedor-buscador
					display inline-block
					vertical-align top
					height 20px
					margin-top 15px
				ul 
					text-align right
					li 
						margin 0
						padding 20px 20px
						p
							color gris-texto
							font-size .9rem
							text-decoration none
							font-weight 100
						a
							color gris-texto
							text-transform initial
							font-size .9rem
					.ofertas
						padding 5px 15px 
						background red
						margin-top -5px
						margin-left 20px
						border-radius 5px
						padding-top 25px
						a
							color #fff
							text-transform uppercase
							font-weight 800
				.horario 
					position absolute
					display none
					padding 10px 
					background #fff 
					color azul-ralero
					width auto
					right 0px
					font-weight 400
					top 20px 
					border-radius 5px
					box-shadow 0px 10px 16px -9px rgba(176,173,176,1)
					cursor pointer
					p
						cursor pointer
					.triangulito
						width 0
						height 0
						position absolute
						margin-left 22px
						margin-top -30px
						border-right 10px solid transparent
						border-top 10px solid transparent
						border-left 10px solid transparent
						border-bottom 10px solid #fff
				.btn-call 
					display none
				.horario-activo
					display block
		.navegacion-principal-activa-small
			height 40px
			.menu-secundario
				top -100px 
			.menu-principal
				top 15px








		
				