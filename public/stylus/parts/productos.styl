.contenedor-productos
	width 90%
	max-width 1300px
	margin 0 auto 
	background #fff
	position relative 
	z-index 2
	font-size 0
	.check-subcategorias
		width 100%
		display inline-block
		vertical-align top 
		ul 
			font-size 0
			width 95%
			margin 20px auto
			.material-checkbox
				display inline-block
				vertical-align top 
				width 50%
				margin-bottom 20px
				&:first-child
					display none
			li 
				list-style none
				font-size 1rem
	.lista-productos
		width 100%
		display inline-block
		vertical-align top
		text-align center
		article
			width 50%
			display inline-block
			vertical-align top
			border-top 1px dashed gris-clarito
			padding 20px 0
			cursor pointer
			&:nth-child(1)
				border-top 0px dashed gris-clarito
			&:nth-child(2)
				border-top 0px dashed gris-clarito
			.texto-articulo
				width 90%
				margin 0 auto 
			figure 
				width 100%
				height auto
				margin 0 auto 
				overflow hidden
				img 
					width 90%
					padding 0 5%
					height auto
			h2
				font-size .9rem
				font-weight 400
				line-height 1.3rem
				text-transform uppercase
				color azul-ralero
				text-align center
			p, ul 
				font-size .9rem
				color gris-texto  
				display none
@media screen and (min-width: 1000px)
	.cabecera-productos
		height 300px
		figure 
			img 
				width 100%
				height auto
	.contenedor-productos
		margin-bottom 50px
		border-bottom 1px dashed gris-clarito
		.check-subcategorias
			width 20%
			padding-top 30px
			ul 
				width 80%
				margin 0 auto
				.material-checkbox
					width 100%
					display block
					margin-bottom 30px
		.lista-productos
			width 80%
			position relative
			text-align left
			article
				width 25%
				padding-top 60px
				border-left 0px dashed gris-clarito
				border-top 0px dashed gris-clarito
				position relative
				overflow hidden
				figure 
					overflow hidden
					transition all .5s
					transform scale(1)
					position relative 
					z-index 1
					img 
						width 80%
						padding 0 10%
				.texto-articulo
					position absolute
					width 250px
					left 50%
					margin-left -125px
					text-align center
					z-index 3
					transition all .5s
				h2
					z-index 3
					transition all .5s
					margin-bottom 20px
				p 
					font-size .8rem
					line-height 1.2rem
					color #fff 
					z-index 3
					display none
					transition all .5s
					margin-bottom 20px
				.btn-ficha-tecnica
					width 100px 
					height 30px 
					line-height 30px 
					margin 0 auto 
					border 1px solid rojo-ralero
					border-radius 15px
					color #fff	
					text-transform uppercase
					font-weight 100
					p 
						line-height 30px
						display block
				&:nth-child(odd)
					margin-right initial
					border-right initial
				&:nth-child(3)
					border-top 0px dashed gris-clarito
				.circulo-azul
					width 1000px
					height 1000px
					border-radius 50%
					transform scale(0)
					position absolute
					background-color rgba(32, 57, 85, .90)
					left 50%
					margin-left -500px
					top 50%
					margin-top -500px
					transform scale(0)
					transition all .5s
					z-index 2
				&:hover 
					.circulo-azul
						transform scale(1)
					figure 
						transform scale(1.5)
					.texto-articulo
						margin-top -170px
						h2 
							color #fff 
							margin-bottom 10px
					




