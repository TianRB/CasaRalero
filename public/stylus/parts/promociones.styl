.contenedor-promociones
	width 80%
	margin 0 auto 
	margin-top 100px
	margin-bottom 100px
	.promociones
		width 100%
		margin-bottom 50px
		figure
			width 100%
			img
				width 100%
				height auto 
		h2 
			font-size 1.5rem
			color azul-ralero
			text-align center
			margin-bottom 10px
		div
			font-size 1.8rem
			width 150px
			height 40px 
			line-height 40px
			background rojo-ralero
			color #fff 
			text-align center
			font-weight 800
			margin 0 auto
@media screen and (min-width: 700px)
	.contenedor-promociones
		max-width 600px
		font-size 0
		text-align center
		.promociones
			width 45%
			margin 2.5%
			display inline-block
			vertical-align top 
			height 410px
			position relative
			div
				position absolute
				bottom 0
				left 50%
				margin-left -75px
@media screen and (min-width: 1000px)
	.contenedor-promociones
		max-width 1400px
		width 90%
		.promociones
			width 29%
			margin 2%
			height 500px

		